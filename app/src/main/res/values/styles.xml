<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="popupStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>

    </style>

    <style name="check_selector" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_selector</item>
    </style>


</resources>
