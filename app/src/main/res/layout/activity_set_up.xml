<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCC"
    tools:context="co.com.newpandatv.view.activity.SetUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="45dp">
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/setUp_IMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/personal_back_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="设置"
            android:layout_marginRight="30dp"
            android:textColor="@color/biz_audio_progress_first"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="clip_vertical"
        android:gravity="center_vertical"
        android:text="常用功能"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="是否接收消息推送"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"

            />
        <ImageView
            android:id="@+id/setUp_T"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/switch_open"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="自动播放下一集"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"

            />
        <ImageView
            android:id="@+id/setUp_X"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/switch_open"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/huan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="清除缓存"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/setUp_Mb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.00M"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/personal_delete_img"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="clip_vertical"
        android:gravity="center_vertical"
        android:text="其他"/>

    <LinearLayout
        android:id="@+id/setUp_F"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户反馈及帮助"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/personal_enter_img"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/setUp_C"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="检测升级"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/personal_enter_img"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/setUp_H"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="喜欢给我们，给我好评"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/personal_enter_img"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/setUp_G"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/biz_audio_progress_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关于熊猫频道"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/personal_enter_img"/>

    </LinearLayout>

</LinearLayout>
