<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#eee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_two_text"
        android:text="熊猫播报"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_home_lan"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/home_two_image" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:background="@drawable/button_style"
                    android:id="@+id/home_two_btn1"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="sss"/>
                <TextView
                    android:id="@+id/home_two_text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_style"
                    android:id="@+id/home_two_btn2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="sss"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/home_two_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textSize="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>